

@{
    ViewBag.Title = "Dnevni promet";
}


<div class="col-sm-4 col-sm-offset-4">
    <div class="text-center">
        <h1 style="color:burlywood"><span class="fa fa-calculator"></span> </h1>   
    </div>    
</div>

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">

        <div class="panel panel-info">
            <div class="panel-heading">
                <h4 style="color: #808080" class="text-center">Dnevni promet MP</h4>
            </div>
            <div class="panel-body">

                <div class="form-group">
                        @using (Html.BeginForm("GetDnevni", "Promet", FormMethod.Post, new { @class = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <div>
                                    <script>
                                        $(function () {
                                            $("#DateFrom").datepicker({
                                                dateFormat: "dd.mm.yy"
                                            });
                                        });
                                    </script>

                                    <div class="form-group">
                                        <input class="form-control text-center" style="font-weight:700" type="text" name="dateFrom" id="DateFrom" value="@ViewBag.dateFrom" readonly />
                                    </div>
                                    <div class="form-group text-center">
                                        <input type="submit" value="Izveštaj" class="btn btn-default" id="btnReport" />
                                    </div>
                                                                            
                                </div>
                            </div>
                        }
                    </div>

            </div>
            <!-- End panel body -->
        </div>
    </div>
</div>