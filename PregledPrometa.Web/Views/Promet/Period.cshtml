
@model PregledPrometa.Web.Models.DPViewModel

@{
    ViewBag.Title = "Pregled za period";
}

<div class="col-sm-4 col-sm-offset-4">
    <div class="text-center">
        <h1 style="color:burlywood"><span class="fa fa-calculator"></span> </h1>        
    </div>    
</div>

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">

        <div class="panel panel-danger">
            <div class="panel-heading">
                <h4 style="color: #000000" class="text-center">Promet MP za period</h4>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    @using (Html.BeginForm("GetPeriod", "Promet", FormMethod.Post, new { @class = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <div>
                                <script>
                                $(function () {
                                    $("#DateFrom, #DateTo").datepicker({
                                        dateFormat: "dd.mm.yy"
                                    });
                                });
                                </script>

                                <div class="form-group">
                                    <input style="color:orangered; font-weight:700" class="form-control text-center" type="text" name="dateFrom" id="DateFrom" value="@ViewBag.dateFrom" readonly />
                                </div>
                                <div class="form-group">
                                    <h1 class="text-center"><span class="fa fa-angle-double-down"></span></h1>
                                </div>
                                <div class="form-group">
                                    <input style="color:orangered; font-weight:700" class="form-control text-center" type="text" name="dateTo" id="DateTo" value="@ViewBag.dateTo" readonly />
                                </div>
                                <div class="form-group text-center">
                                    <input type="submit" value="Izveštaj" class="btn btn-default" />
                                </div>
                                

                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- End panel body-->
        </div>
    </div>
</div>